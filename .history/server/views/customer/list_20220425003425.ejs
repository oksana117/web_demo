
<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
<!-- list customers view -->
<!-- Main Content -->
<main class="container">
<div class="row">
        <div class="offset-md-2  col-md-8">
            <h1><%= title %></h1>

            
            <a href="/customer-list/add" class="btn btn-dark" role="button">
            <i class="fas fa-plus-circle"></i> Add Customer Information</a>
            <br>
            <br>
            <div class="table-responsive">
            <table class="table table-striped table-secondary table-light">
                <!-- Header Row-->
                <tr>
                  
                    <th class="text-center col-3">Last Name</th>
                    <th class="text-center col-3">First Name</th>
                    <th class="text-center col-1">Email</th>
                    <th class="text-center col-2">Gender</th>
                    <th class="text-center col-1">City</th>
                    <th class="text-center col-2">Birthday</th>
                    <th class="text-center col-2">Update</th>
                    <th class="text-center col-2">Delete</th>
            

                </tr>
                    
               

                <% for(let count = 0; count <CustomerList.length; count++) { %>
                <%CustomerList.sort((a,b)=> (a.lastName < b.lastName)*);%> 
                  <tr>
                       <td class="text-center col-1"><%= CustomerList[count].lastName %> </td>
                       <td class="text-center col-1"><%= CustomerList[count].firstName %></td>
                       <td class="text-center col-2"><%= CustomerList[count].email %></td>
                       <td class="text-center col-2"><%= CustomerList[count].gender %></td>
                       <td class="text-center col-4"><%= CustomerList[count].city %></td>
                       <td class="text-center col-4"><%= CustomerList[count].birthday.toDateString() %></td>
                  

                     <td class="text-center col-1">
                     <a href="/customer-list/edit/<%=  CustomerList[count]._id  %>" class="btn btn-secondary btn-sm">
                     <i class="fas fa-pencil-alt"></i> Update</a></td>
                     <td class="text-center col-1">
                     <a href="/customer-list/delete/<%= CustomerList[count]._id %>" class="btn btn-danger btn-sm">
                     <i class="fas fa-trash-alt"></i> Delete</a>
                       </td></tr> <% } %>

               
               
            </table>
            </div>
        </div>
    </div>
  </main>
  <br><br><br>
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  

